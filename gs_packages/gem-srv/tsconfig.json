{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "config/*": ["../config/*"],
      "app/*": ["./app/*"],
      "lib/*": ["app/lib/*"],
      "modules/*": ["app/modules/*"],
      "static/*": ["app/static/*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "./urdu.js"],
  "exclude": ["node_modules"]
}
